{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "emulators": {
    "functions": {
      "port": 4001
    },
    "hosting": {
      "port": 4000
    },
    "ui": {
      "enabled": true
    },
    "firestore": {
      "port": 4002
    }
  },
  "functions": {
    "source": "functions"
  },
  "remoteconfig": {
    "template": "remoteconfig.template.json"
  }
}
